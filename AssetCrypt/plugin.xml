<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.gft.cordova.plugins.assetcrypt" version="0.0.1"
  xmlns="http://apache.org/cordova/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <name>AssetCrypt</name>
  <description>Encrypted assets filesystem</description>

  <platform name="android">
    <config-file parent="/*" target="res/xml/config.xml">
      <feature name="AssetCrypt">
        <param name="android-package" value="com.gft.cordova.plugins.assetcrypt.AssetCrypt" />
      </feature>
    </config-file>
    <config-file parent="/*" target="AndroidManifest.xml"></config-file>
    <source-file src="src/android/AssetCrypt.java"
      target-dir="src/com/gft/cordova/plugins/assetcrypt/AssetCrypt" />
  </platform>

</plugin>
